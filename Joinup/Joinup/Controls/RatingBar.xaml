<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Joinup.CustomControls"
             x:Class="Joinup.Controls.RatingBar">
  <ContentView.Content>
      <StackLayout
          Orientation="Horizontal">
            <controls:FontIcon 
                x:Name="star1"
                Icon="star-outline"
                IconColor="{StaticResource RemarkColor}"/>
            <controls:FontIcon 
                x:Name="star2"
                Icon="star-outline"
                IconColor="{StaticResource RemarkColor}"/>
            <controls:FontIcon
                x:Name="star3"
                Icon="star-outline"
                IconColor="{StaticResource RemarkColor}"/>
            <controls:FontIcon
                x:Name="star4"
                Icon="star-outline"
                IconColor="{StaticResource RemarkColor}"/>
            <controls:FontIcon
                x:Name="star5"
                Icon="star-outline"
                IconColor="{StaticResource RemarkColor}"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>