<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Joinup.Controls.SeparatorLine">
  <ContentView.Content>
      <StackLayout
          Spacing="0">
            <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="{StaticResource DividerLightColor}"/>
            <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="{StaticResource DividerColor}"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>