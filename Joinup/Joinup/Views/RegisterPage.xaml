<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customEntry="clr-namespace:Joinup.Controls"
             x:Class="Joinup.Views.RegisterPage"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             BackgroundColor="{StaticResource PrimaryColor}">

    <ContentPage.Resources>
        <ResourceDictionary>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
            <Grid
            Margin="32,0,32,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>
                <ffimageloading:CachedImage 
                Grid.Row="0"
                Source="Add_Image.png"
                LoadingPlaceholder="Add_Image.png" 
                ErrorPlaceholder="Add_Image.png" 
                Aspect="AspectFit" 
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="120"
                WidthRequest="120">
                </ffimageloading:CachedImage>

                <StackLayout
                Grid.Row="1">

                    <customEntry:FloatingLabelEntry
                    Text="{Binding Name}"
                    AccentColor="White"
                    Placeholder="Nombre"/>
                    
                    <customEntry:FloatingLabelEntry
                    Text="{Binding Surname}"
                    AccentColor="White"
                    Placeholder="Apellidos"
                    Margin="0,32,0,0"/>

                    <customEntry:FloatingLabelEntry
                    Text="{Binding Email}"
                    AccentColor="White"
                    Placeholder="Email"
                    Margin="0,32,0,0"/>

                    <customEntry:FloatingLabelEntry
                    Text="{Binding Password}"
                    AccentColor="White"
                    IsPassword="True"
                    Placeholder="Contraseña"
                    Margin="0,32,0,0"/>

                    <Frame
                    HasShadow="True"
                    OutlineColor="{StaticResource ShadowColor}"  
                    Margin="2,24,2,0"
                    Padding="0">
                        <Button                
                    TextColor="White"
                    FontFamily="{StaticResource RobotoMedium}"
                    FontSize="{StaticResource LargeSize}"
                    BackgroundColor="{StaticResource DarkPrimaryColor}"
                    HorizontalOptions="FillAndExpand"
                    Text="Registrarme"
                    Command="{Binding RegisterCommand}"
                    />

                    </Frame>
                </StackLayout>

            </Grid>
            <ActivityIndicator 
                IsRunning="{Binding IsRunning}" 
                Color="White"
                WidthRequest="50"
                HeightRequest="50"
                VerticalOptions="End" 
                Margin="0,0,0,32"
                HorizontalOptions="Center" />
        </Grid>
    </ContentPage.Content>
</ContentPage>