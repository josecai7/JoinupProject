<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="Joinup.Views.CommentsPage">
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding Comments}">
            <ListView
                ItemsSource="{Binding CommentList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Label Grid.Column="0" Text="{Binding UserId}" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding EventId}" />
                                <Label Grid.Column="2" Text="{Binding CommentText}" HorizontalTextAlignment="End" />
                                <Label Grid.Column="3" Text="{Binding CommentDate}" HorizontalTextAlignment="End" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>